{
  "name": "financial-analysis",
  "version": "0.1.1",
  "description": "Financial analysis tooling with LLM integration via MCP",
  "private": true,
  "scripts": {
    "build": "pnpm --recursive run build",
    "dev": "pnpm run dev:all",
    "dev:api": "cd workers/api && pnpm dev",
    "dev:web:build": "cd apps/web && pnpm build",
    "dev:web:worker": "cd workers/web && pnpm dev",
    "dev:workers": "(cd workers/api && pnpm dev) & (cd workers/web && pnpm dev) && wait",
    "dev:all": "pnpm run dev:web:build && (cd workers/api && pnpm dev) & (cd workers/web && pnpm dev) && wait",
    "test": "pnpm --recursive run test",
    "lint": "pnpm --recursive run lint",
    "format": "pnpm --recursive run format",
    "typecheck": "pnpm --recursive run typecheck",
  "clean": "pnpm --recursive run clean",
  "smoke": "node scripts/smoke.mjs",
    "deploy:api": "cd workers/api && pnpm run deploy",
    "deploy:web": "cd workers/web && pnpm run deploy",
    "deploy:all": "pnpm run deploy:api && pnpm run deploy:web",
    "install:all": "pnpm install",
    "prepare": "husky"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "typescript": "^5.0.0",
    "eslint": "^9.13.0",
    "@typescript-eslint/eslint-plugin": "^8.12.2",
    "@typescript-eslint/parser": "^8.12.2",
    "prettier": "^3.0.0",
    "vitest": "^2.0.0",
    "@vitest/coverage-v8": "^2.0.0",
    "wrangler": "^4.0.0",
    "husky": "^9.0.0",
    "@commitlint/cli": "^19.0.0",
    "@commitlint/config-conventional": "^19.0.0",
    "astro-eslint-parser": "^1.2.2",
    "eslint-plugin-astro": "^1.3.0",
    "undici": "^7.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "packageManager": "pnpm@9.0.0"
}
