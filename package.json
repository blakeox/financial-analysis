{
  "name": "financial-analysis",
  "version": "0.1.1",
  "description": "Financial analysis tooling with LLM integration via MCP",
  "private": true,
  "scripts": {
    "build": "pnpm --recursive run build",
    "dev": "pnpm run dev:all",
    "dev:api": "cd workers/api && pnpm dev",
    "dev:web:build": "cd apps/web && pnpm build",
    "dev:web:worker": "cd workers/web && pnpm dev",
    "dev:workers": "(cd workers/api && pnpm dev) & (cd workers/web && pnpm dev) && wait",
    "dev:all": "node scripts/dev-all.mjs",
    "rebuild:ui": "pnpm --filter @financial-analysis/ui run build",
    "clean:vite:web": "rm -rf apps/web/node_modules/.vite",
    "test": "pnpm --recursive run test",
    "lint": "pnpm --recursive run lint",
    "format": "pnpm --recursive run format",
    "typecheck": "pnpm --recursive run typecheck",
    "changeset": "changeset",
    "clean": "pnpm --recursive run clean",
    "smoke": "node scripts/smoke.mjs",
    "deploy:api": "cd workers/api && pnpm run deploy",
    "deploy:web": "cd workers/web && pnpm run deploy",
    "deploy:all": "pnpm run deploy:api && pnpm run deploy:web",
    "install:all": "pnpm install",
    "prepare": "husky"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.7",
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@types/node": "^24.5.2",
    "@typescript-eslint/eslint-plugin": "^8.44.0",
    "@typescript-eslint/parser": "^8.44.0",
    "@vitest/coverage-v8": "3.2.4",
    "astro-eslint-parser": "^1.2.2",
    "esbuild": "0.25.10",
    "eslint": "^9.35.0",
    "eslint-plugin-astro": "^1.3.1",
    "husky": "^9.1.7",
    "prettier": "^3.6.2",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2",
    "undici": "^7.16.0",
    "vite": "7.1.5",
    "vitest": "3.2.4",
    "wrangler": "^4.37.1"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "packageManager": "pnpm@10.17.0"
}
