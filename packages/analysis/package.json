{
	"name": "@financial-analysis/analysis",
	"version": "0.1.1",
	"description": "Deterministic financial analysis engines",
	"type": "module",
	"main": "./dist/index.js",
	"types": "./src/index.d.ts",
	"exports": {
		".": {
			"types": "./src/index.d.ts",
			"import": "./dist/index.js"
		}
	},
	"files": [
		"dist"
	],
	"sideEffects": false,
	"scripts": {
		"build": "rm -rf dist tsconfig.tsbuildinfo && tsc --build tsconfig.json --force",
		"dev": "tsc --watch",
		"lint": "eslint src --ext .ts --ignore-pattern '*.d.ts'",
		"format": "prettier --write src",
		"typecheck": "tsc --noEmit",
		"test": "pnpm run build && vitest run --config ./vitest.config.mjs",
		"test:coverage": "pnpm run build && vitest --coverage --config ./vitest.config.mjs"
	},
	"dependencies": {
		"decimal.js": "^10.4.0",
		"zod": "^3.22.0"
	},
	"devDependencies": {
			"@financial-analysis/config": "workspace:*",
		"@typescript-eslint/eslint-plugin": "^8.12.2",
		"@typescript-eslint/parser": "^8.12.2",
		"@vitest/coverage-v8": "3.2.4",
		"eslint": "^9.13.0",
		"prettier": "^3.0.0",
		"typescript": "^5.0.0",
		"vite": "7.1.5",
		"vitest": "3.2.4",
		"esbuild": "0.25.10"
	}
}