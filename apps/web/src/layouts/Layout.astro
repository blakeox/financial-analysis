---
import { Footer } from '@financial-analysis/ui';
import SEO from '../components/SEO.astro';
import '../styles/global.css';
import ModernNavBar from '../components/ModernNavBar.astro';

export interface Props {
  title: string;
  description?: string;
  canonical?: string;
  image?: string;
}

const { title, description = "Financial Analysis Tooling", canonical, image } = Astro.props;

const navLinks = [
  { label: 'Home', href: '/' },
  { label: 'Models', href: '/models' },
  { label: 'Analysis', href: '/analysis' },
];
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <SEO title={title} description={description} url={Astro.url.href} canonical={canonical} image={image} />

    <!-- Tailwind CSS -->
    <script is:inline>
      if (typeof localStorage !== 'undefined' && localStorage.getItem('theme')) {
        document.documentElement.classList.toggle('dark', localStorage.getItem('theme') === 'dark');
      } else if (window.matchMedia('(prefers-color-scheme: dark)').matches) {
        document.documentElement.classList.add('dark');
      }
    </script>
  </head>
  <body class="bg-gray-50 dark:bg-gray-900 text-gray-900 dark:text-white min-h-screen font-sans">
    <!-- Skip Link (visually hidden until focus) -->
    <a href="#main-content" class="skip-link">Skip to main content</a>
    <style is:inline>
      .skip-link {position:absolute;left:0;top:0;transform:translateY(-120%);background:#1f2937;color:#fff;padding:.5rem .75rem;border-radius:0 0 .5rem 0;font-size:.875rem;font-weight:500;outline:2px solid transparent;transition:transform .25s;z-index:60;text-decoration:none;}
      .skip-link:focus {transform:translateY(0);outline:2px solid #3b82f6;}
      .dark .skip-link {background:#111827;}
    </style>
    

    <!-- Header / Navigation -->
    <div id="site-header">
      <ModernNavBar links={navLinks} currentPath={Astro.url.pathname} brand="Financial Analysis" />
    </div>

    <!-- Main Content -->
    <main id="main-content" tabindex="-1" class="flex-1 mt-20">
      <slot />
    </main>

    <!-- Footer -->
    <Footer client:load />
  </body>
</html>
