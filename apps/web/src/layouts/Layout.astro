---
import { Navbar, Footer } from '@financial-analysis/ui';
import SEO from '../components/SEO.astro';
import '../styles/global.css';

export interface Props {
  title: string;
  description?: string;
  canonical?: string;
  image?: string;
}

const { title, description = "Financial Analysis Tooling", canonical, image } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <SEO title={title} description={description} url={Astro.url.href} canonical={canonical} image={image} />

    <!-- Tailwind CSS -->
    <script is:inline>
      if (typeof localStorage !== 'undefined' && localStorage.getItem('theme')) {
        document.documentElement.classList.toggle('dark', localStorage.getItem('theme') === 'dark');
      } else if (window.matchMedia('(prefers-color-scheme: dark)').matches) {
        document.documentElement.classList.add('dark');
      }
    </script>
  </head>
  <body class="bg-gray-50 dark:bg-gray-900 text-gray-900 dark:text-white min-h-screen font-sans">
    <!-- Skip Links -->
    <a href="#main-content" class="skip-link">Skip to main content</a>
    <a href="#site-header" class="skip-link">Skip to navigation</a>

    <!-- Header / Navigation -->
    <header id="site-header">
      <Navbar client:load sticky currentPath={Astro.url.pathname} />
    </header>

    <!-- Main Content -->
    <main id="main-content" tabindex="-1" class="flex-1">
      <slot />
    </main>

    <!-- Footer -->
    <Footer client:load />
  </body>
</html>