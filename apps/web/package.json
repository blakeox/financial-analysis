{
  "name": "@financial-analysis/web",
  "version": "0.1.1",
  "type": "module",
  "scripts": {
    "dev": "astro dev",
    "start": "astro dev",
  "prebuild": "pnpm --filter @financial-analysis/ui run build && rm -rf node_modules/.vite",
    "build": "astro build",
    "preview": "astro preview",
    "astro": "astro",
    "pretypecheck": "pnpm -w --filter @financial-analysis/ui run build",
    "lint": "eslint src --ext .ts,.tsx,.astro",
    "format": "prettier --write .",
    "typecheck": "astro check",
    "typecheck:tests": "tsc -p tsconfig.playwright.json --noEmit",
    "test:e2e": "playwright test",
    "test:e2e:dev": "playwright test -c playwright.dev.config.ts -g 'Navbar dev HMR stability'"
  },
  "dependencies": {
    "@astrojs/react": "^4.3.1",
    "@financial-analysis/analysis": "workspace:*",
    "@financial-analysis/tools": "workspace:*",
    "@financial-analysis/ui": "workspace:*",
    "astro": "^5.13.7",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "tailwindcss": "^4.1.13",
    "zod": "^4.1.9"
  },
  "devDependencies": {
    "@astrojs/check": "^0.5.0",
    "@axe-core/playwright": "^4.10.2",
    "@playwright/test": "^1.55.0",
    "@tailwindcss/postcss": "^4.1.13",
    "@types/react": "^19.1.13",
    "@types/react-dom": "^19.1.9",
    "@typescript-eslint/eslint-plugin": "^8.12.2",
    "@typescript-eslint/parser": "^8.12.2",
    "autoprefixer": "^10.4.20",
    "eslint": "^9.13.0",
    "eslint-plugin-astro": "^1.3.0",
    "postcss": "^8.4.47",
    "prettier": "^3.0.0",
    "prettier-plugin-astro": "^0.13.0"
  }
}
